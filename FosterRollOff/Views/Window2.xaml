        <TextBox Grid.Column="9" Grid.Row="6" Grid.ColumnSpan="2" Grid.RowSpan="1" />
        <TextBox Grid.Column="9" Grid.Row="5" Grid.ColumnSpan="2" Grid.RowSpan="1" />
        <TextBox Grid.Column="4" Grid.Row="8" Grid.ColumnSpan="6" Grid.RowSpan="2"/>
        <Label Content="Notes" Grid.Column="3" Grid.Row="8" Grid.ColumnSpan="2" Grid.RowSpan="1"/>
        <CheckBox Content="Send Customer to Collections" Grid.Column="3" Grid.Row="10" Grid.ColumnSpan="7" Grid.RowSpan="1"/>
        <Label Content="Current Balance" Grid.Column="3" Grid.Row="11" Grid.ColumnSpan="3"/>
        <TextBox Grid.Column="6" Grid.Row="11" Grid.ColumnSpan="2"  Grid.RowSpan="1"/>
        <Label Content="As Of" Grid.Row="11" Grid.Column="8" Grid.ColumnSpan="2"/>
        <DatePicker Grid.Row="11" Grid.Column="10" Grid.ColumnSpan="2"/>
        <Button Content="Save" Grid.ColumnSpan="2" Grid.Column="12"  Grid.Row="9" Grid.RowSpan="1"/>
        <Button Content="Cancel" Grid.ColumnSpan="2" Grid.Column="12"  Grid.Row="10" Grid.RowSpan="1"/>


















    </Grid>
